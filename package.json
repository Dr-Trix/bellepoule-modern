{
  "name": "bellepoule-modern",
  "productName": "BellePoule Modern",
  "version": "1.0.0-build.95",
  "description": "Modern fencing tournament management software - Rewritten from the original BellePoule",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && webpack --config webpack.renderer.config.js",
    "build:main": "tsc",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "fencing",
    "escrime",
    "tournament",
    "competition",
    "bellepoule"
  ],
  "author": {
    "name": "BellePoule Modern Contributors",
    "email": "yann.deboeuf@gmail.com"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/klinnex/bellepoule-modern"
  },
  "build": {
    "appId": "com.bellepoule.modern",
    "productName": "BellePoule Modern",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "version.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      },
      {
        "from": "version.json",
        "to": "version.json"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.sports",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "resources/icons",
      "category": "Sports",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  },
  "dependencies": {
    "@types/express": "^5.0.6",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "express": "^5.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.8.3",
    "sql.js": "^1.13.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  }
}
